<div class="breadcrumbs">

  <a href="/">{{ 'general.breadcrumbs.home' | t }}</a> <span class="divider">/</span>
  {% if template contains "product" %}
    {% if product.collections %}
      <a href="/collections">{{ 'collections.listing.header' | t }}</a> {% if product.collections.size > 0 %}<span class="divider">/</span> <a href="{{ product.collections.first.url }}">{{ product.collections.first.title }}</a>{% endif %}
    {% else %}
      <a href="/collections/all">{{ 'general.breadcrumbs.products' | t }}</a>
    {% endif %}
    <span class="divider">/</span> <span class="current">{{ product.title }}</span>
  {% elsif template contains "list-collections" %}
    <span class="current">{{ 'collections.listing.header' | t }}</span>
  {% elsif template contains "collection" %}
    <a href="/collections">{{ 'collections.listing.header' | t }}</a> <span class="divider">/</span> <span class="current">{{ collection.title }}</span>
  {% elsif template contains "blog" %}
    {% if current_tags.size > 0 %}
      <a href="{{ blog.url }}">{{ blog.title }}</a> <span class="divider">/</span> <span class="current">{{ 'general.breadcrumbs.tagged' | t }}: {% for tag in current_tags %}{{ tag }}{% unless forloop.last %}, {% endunless %}{% endfor %}</span>
    {% else %}
      <a class="current" href="{{ blog.url }}">{{ blog.title }}</a>
    {% endif %}
  {% elsif template contains "page" %}
    <span class="current">{{ page.title }}</span>
  {% elsif template contains "article" %}
    {{ blog.title | link_to: blog.url }} <span class="divider">/</span> <span class="current">{{ article.title }}</span>
  {% elsif template contains "cart" %}
    <span class="current">{{ 'cart.general.header' | t }}</span>
  {% elsif template contains "404" %}
    <span class="current">{{ 'general.breadcrumbs.404' | t }}</span>
  {% elsif template contains "search" %}
    <span class="current">{{ 'general.search.header' | t }}</span>
  {% elsif template contains "customers/login" %}
    <a href="/account">{{ 'general.breadcrumbs.account' | t }}</a> <span class="divider">/</span> <span class="current">{{ 'customers.login.header' | t }}</span>
  {% elsif template contains "customers/reset_password" %}
    <a href="/account">{{ 'general.breadcrumbs.account' | t }}</a> <span class="divider">/</span> <span class="current">{{ 'customers.reset_password.header' | t }}</span>
  {% elsif template contains "customers/activate_account" %}
    <a href="/account">{{ 'general.breadcrumbs.account' | t }}</a> <span class="divider">/</span> <span class="current">{{ 'customers.activate_account.header' | t }}</span>
  {% elsif template contains "customers/account" %}
    <span class="current">{{ 'customers.account.header' | t }}</span>
  {% elsif template contains "customers/addresses" %}
    <a href="/account">{{ 'general.breadcrumbs.account' | t }}</a> <span class="divider">/</span> <span class="current">{{ 'customers.addresses.header' | t }}</span>
  {% elsif template contains "customers/register" %}
    <a href="/account">{{ 'general.breadcrumbs.account' | t }}</a> <span class="divider">/</span> <span class="current">{{ 'customers.register.header' | t }}</span>
  {% elsif template contains "customers/order" %}
    <a href="/account">{{ 'general.breadcrumbs.account' | t }}</a> <span class="divider">/</span> <span class="current">{{ 'customers.order.header' | t: order_number: order.name }}</span>
  {% endif %}

</div>
