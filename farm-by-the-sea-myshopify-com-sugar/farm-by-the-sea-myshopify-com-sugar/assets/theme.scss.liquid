  .twitter a:before { content: "\ea91"; }
  .facebook a:before { content: "\e619"; }
  .pinterest a:before { content: "\e61b"; }
  .vimeo a:before { content: "\e623"; }
  .google a:before { content: "\e61c"; }
  .kickstarter a:before { content: "\e625"; }
