@function calculateRem($size) {
  $remSize: $size / 16px;
  @return #{$remSize}rem;
}
@mixin breakpoint($size) {
  @if $size == extra-large {
    @media (min-width: 1000px) { @content; }
  }
  @else if $size == large {
    @media (max-width: 999px) { @content; }
  }
  @else if $size == medium {
    @media (max-width: 939px) { @content; }
  }
  @else if $size == small {
    @media (max-width: 768px) { @content; }
  }
  @else if $size == tiny {
    @media (max-width: 479px) { @content; }
  }
}

@mixin hover($color, $property: color) {
  @if lightness($color) > 10% {
    #{$property}: darken($color,5%);
  } @else {
    #{$property}: lighten($color,5%);
  }
}

@mixin lt-ie9 {
  .lt-ie9 & {
    @content;
  }
}

@mixin lt-ie10 {
  .lt-ie10 & {
    @content;
  }
}

@mixin retina {
  @media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi) {
    @content;
  }
}

@mixin font-size($size) {
  font-size: $size;
  font-size: calculateRem($size);
}

@mixin icon-font($size) {
  @include font-size($size);
  font-family: "Icons";
  speak: none;
  font-style: normal;
  font-weight: normal;
  font-variant: normal;
  text-transform: none;
  line-height: 1;
}

@mixin box-sizing($box-model) {
  -webkit-box-sizing: $box-model;
  -moz-box-sizing: $box-model;
  box-sizing: $box-model;
}

@mixin placeholder {
  &.placeholder { @content; }
  &:-moz-placeholder { @content; opacity: 1; }
  &::-moz-placeholder { @content; opacity: 1; }
  &::-webkit-input-placeholder { @content; }
}

@mixin opacity($opacity) {
  opacity: $opacity;
  $opacity-ie: $opacity * 100;
  filter: alpha(opacity=$opacity-ie); //IE8
}

@mixin user-select($select) {
  -webkit-user-select: $select;
  -moz-user-select: $select;
  -ms-user-select: $select;
  user-select: $select;
}

@mixin cursor($cursor) {
  cursor: -webkit-#{$cursor};
  cursor: -moz-#{$cursor};
  cursor: $cursor;
}

