  position: relative;
  width: 100%;
  margin-bottom: 30px;
  overflow: hidden;

  @include breakpoint(small) { margin-bottom: 25px; }
  @include breakpoint(tiny) { margin-bottom: 20px; }

  .slideshow-slide {
    overflow: hidden;
    width: 100%;

    img {
      display: block;
      height: auto;
      margin: 0 auto;
      border-radius: 3px;
    }

    &.zoom-enabled {
      cursor: pointer;
      @include cursor(zoom-in);
    }

    &.zoom-active {
      @include cursor(zoom-out);

      img {
        width: auto;
        min-width: 100%;
        max-width: none;
        height: auto;
      }
    }
  }

  .slideshow-pagers {
    position: absolute;
    width: 100%;
    bottom: 0;
    z-index: 2;
    margin-top: -33px;
    text-align: center;
    @include transition(opacity 0.1s ease-in);

    @include breakpoint(small) { margin-top: -28px; }

    &.hidden { display: none; }

    .zoom-active + & {
      visibility: hidden;
      @include opacity(0);
    }
  }

  .pager {
    position: relative;
    display: inline-block;
    width: 13px;
    height: 13px;
    margin: 0 4px;
    background-color: #ddd;
    border-radius: 50%;
    cursor: pointer;

    @include breakpoint(small) {
      width: 10px;
      height: 10px;
    }

    .zoom-active & {
      visibility: hidden;
      @include opacity(0);
    }

    &:hover {

      &:before,
      &:after,
      img {
        display: block;
        @include opacity(1);

        @include breakpoint(small) {
          display: none;
          @include opacity(0);
        }
      }
    }

    &:before,
    &:after {
      content: "";
      position: relative;
      display: block;
      @include opacity(0);
    }

    &:before {
      top: -11px;
      left: -5px;
      width: 23px;
      height: 30px;
      background-color: $accent-color;
      border-bottom-left-radius: 10px;
      border-bottom-right-radius: 10px;
    }

    &:after {
      top: -31px;
      width: 14px;
      height: 14px;
      background-color: #fff;
      border-radius: 50%;
    }

    &.selected { background-color: $accent-color; }

    img {
      position: absolute;
      bottom: 24px;
      display: none;
      max-width: none;
      border: 5px solid #129be0;
      border-radius: 3px;
    }
  }

  .slide-navigation {
    position: absolute;
    top: 50%;
    z-index: 2;
    margin-top: -26px;
    text-decoration: none;
    color: #ddd;
    cursor: pointer;
    @include icon-font(65px);
    @include transition(all 0.1s ease-in);

    &:hover { color: darken(#ddd, 3%); }

    &:active { @include transform(translateY(2px)); }

    @include breakpoint(small) {
      margin-top: -20px;
      font-size: 50px;
    }

    .zoom-active & {
      visibility: hidden;
      @include opacity(0);
    }

    &.previous { left: 15px; }

    &.next { right: 15px; }
  }
}

