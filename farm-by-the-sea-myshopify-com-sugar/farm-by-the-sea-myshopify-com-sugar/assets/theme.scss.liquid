{% if settings.enable-slideshow %}
  .home-slideshow {
  position: relative;

  .slideshow-slide { width: 100%; }

  .slide-image {
    position: relative;
    width: 100%;
    height: 500px;
    background-position: center center;
    background-size: 100% auto;
    background-size: cover;
    background-repeat: no-repeat;

    @include breakpoint(medium) { height: 340px; }
    @include breakpoint(small) { height: 275px; }
    @include breakpoint(tiny) { height: 130px; }

    &:before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      @include opacity(0.4);
    }
  }

  .overlay-light .slide-image:before { background: #fff; }
  .overlay-dark .slide-image:before { background: #000; }
  .overlay-none .slide-image:before { content: initial; }

  .overlay-accent .slide-image:before {
    background: $accent-color;
    @include opacity(0.3);
  }

  @include breakpoint(tiny) {
    .overlay-light,
    .overlay-dark,
    .overlay-accent,
    .overlay-none {
      .slide-image:before {
        background: none;
        @include opacity(1);
      }
    }
  }

  .no-slide {

    .slide-image {
      background-color: $accent-color;
    }

    .slide-content h3,
    .slide-content p {
      color: #fff;
    }
  }

  .slide-content {
    position: absolute;
    top: 50%;
    left: 50%;
    padding: 0 20px;
    text-align: center;
    @include box-sizing(border-box);

    @include breakpoint(tiny) {
      position: relative;
      top: auto;
      left: auto;
      padding: 25px 20px;
      margin-top: 0 !important;
      margin-left: 0 !important;
    }

    h3 {
      margin: 0;
      font-size: 36px;
      color: $accent-color;

      @include breakpoint(small) { font-size: 26px; }
      @include breakpoint(tiny) { font-size: 20px; }

      a {
        color: inherit;
        text-decoration: none;
      }
    }

    .slide-subtitle {
      margin: 0;
      font-size: 20px;
      color: $color-secondary-grey;

      @include breakpoint(small) { font-size: 16px; }

      a {
        color: inherit;
        text-decoration: none;
      }
    }
  }


  .text-dark h3,
  .text-dark .slide-subtitle {
    color: #222;
  }

  .text-light h3,
  .text-light .slide-subtitle {
    color: #fff;
  }

  .text-dark h3,
  .text-dark .slide-subtitle,
  .text-light h3,
  .text-light .slide-subtitle {
    @include breakpoint(tiny) {
      color: $color-secondary-grey;
    }
  }

  .slideshow-navigation {
    position: absolute;
    top: 0;
    z-index: 2;
    display: block;
    width: 60px;
    height: 100%;
    color: #fff;
    cursor: pointer;

    &:before {
      position: relative;
      // top: 42px;
      top: 225px;
      color: inherit;
      // @include icon-font(45px);
      @include icon-font(60px);
      @include transition(color 0.23s $cubic-swift-out);

      @include breakpoint(medium) {
        top: 145px;
        @include font-size(55px);
      }

      @include breakpoint(small) { top: 115px; }

      @include breakpoint(tiny) {
        top: 42px;
        @include font-size(45px);
      }
    }

    &[data-color="text-dark"] { color: #222; }

    &[data-color="text-light"] { color: #fff; }

    &.previous-slide {
      left: 0;
      text-align: right;

      &:before {
        content: "\e61e";
        padding-right: 10px;
      }
    }

    &.next-slide {
      right: 0;
      text-align: left;

      &:before {
        content: "\e61f";
        padding-left: 10px;
      }
    }
  }
}

{% endif %}

