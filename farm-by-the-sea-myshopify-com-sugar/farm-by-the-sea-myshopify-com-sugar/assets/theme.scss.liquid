        .more-link { color: #fff; }

        .publish-date,
        .post-excerpt {
          color: #fff;
          @include opacity(0.8);
        }
      }
    }

    .highlight & { @include transition(border 0.1s ease-in); }

    .fill & { @include transition(border 0.1s ease-in, background 0.1s ease-in); }
  }

  &.first-child .post-inner { margin-left: 0; }

  &.first-child + & .post-inner { margin-right: 0; }

  .post-image {
    display: block;
    margin-bottom: 10px;

    img {
      display: block;
      margin-right: auto;
      margin-left: auto;
