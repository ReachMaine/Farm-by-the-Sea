.main-sidebar {
  width: 25%;
  padding-right: 40px;
  float: left;
  @include box-sizing(border-box);

  @include breakpoint(large) { padding-right: 32px; }

  .overflow-container {

    ul {
      padding: 0;
      margin: 0;

      li {
        margin-top: 8px;

        &:first-child { margin-top: 0; }
      }

      > li ul { padding-left: 16px; }
    }

    > ul > li {
      padding-bottom: 10px;
      border-bottom: 1px solid $color-border-grey;

      a {
        display: block;
        color: $color-primary-grey;
        font-size: 17px;
        font-weight: 500;

        &:hover { color: $accent-color; }
      }
    }

    > ul > li ul a {
      color: $color-secondary-grey;
      font-size: 16px;
      font-weight: 500;
    }

    a {
      text-decoration: none;

      &.current { color: $accent-color !important; }
    }

  }
}

.main-sidebar .background-overlay { display: none; }

.main-sidebar .navigation { width: 100%; }

.toggle-menu {
  position: relative;
  top: 1px;
  width: 20px;
  text-align: center;
  float: right;

  .menu-open & {
    top: 0px;
  }
}

.go-forward,
.go-backward,
.back-link {
  display: none;
}

.cart.sidebar { display: none; }

.navigation .mobile-search { display: none; }

.navigation .header-search-form {
  display: block;
  padding: 20px 10px;
  margin: 0 10px;
  border: none;

  .search-input {
    width: 100%;
    padding-top: 10px;
    padding-bottom: 10px;
    padding-left: 42px;

    &:focus { box-shadow: none; }
  }

  .search-icon {
    top: 31px;
    left: 25px;
  }

  .clear-icon {
    top: 30px;
    right: 22px;
  }
}

.navigation-item,
.navigation-item ul {
  display: block;

  &.hidden {
    display: none;
  }
}

.navigation-show-more,
.navigation-show-less {
  @extend %label-style;
  margin-top: 12px !important;
  font-size: 12px;
  cursor: pointer;

  @include breakpoint(medium) {
    padding: 8px 20px 18px;
  }
}

@include breakpoint(medium) {

  body:not(.sidebar-closed) { overflow: hidden; }

  .main-sidebar {
    width: 100%;
  }

  .main-sidebar .sidebar {
    position: absolute;
    width: 320px;
    height: 100%;
    font-size: 18px;
    background: #fff;
    box-shadow: 0 8px 10px 2px rgba(0,0,0,0.15);
    @include transition(all $sidebar-animation-timing);
    @include transition-delay(0.2s);

    &.navigation {
      left: 0;

      .side-nav-closed & {
        @include opacity(0);
        @include transform(translateX(-320px));

        @include breakpoint(tiny) {
          @include transform(translateX(-100%));
        }
      }
    }

    &.cart {
      display: block;
      right: 0;

      .side-cart-closed & {
        @include opacity(0);
        @include transform(translateX(320px));

        @include breakpoint(tiny) {
          @include transform(translateX(100%));
        }
      }
    }
  }

  .main-sidebar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 5;

    .sidebar-can-transition & { @include transition(all $sidebar-animation-timing); }

    &:before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-color: $accent-color;
      @include opacity(0.8);
    }

    .sidebar-closed & {
      visibility: hidden;
      @include opacity(0);
    }
  }

  .main-sidebar .navigation {

    .mobile-search { display: block; }

    .overflow-container {
      position: relative;
      overflow: hidden;

      ul {
        padding: 0;
        margin: 0;
        list-style-type: none;
        @include transition(all $sidebar-animation-timing);

        ul { padding: 0; }

        > li ul { display: none; }
      }

      > ul > li { padding-bottom: 0; }

      li {
        margin-top: 5px;
        border-bottom: 1px solid $color-border-grey;
      }

      a {
        position: relative;
        display: block;
        padding: 9px 20px 14px;
        color: $color-primary-grey;
        font-size: 17px;
        text-decoration: none;
        cursor: pointer;

        &.parent-link { display: table; }

        .link-title,
        .go-forward,
        .go-backward {
          display: table-cell;
        }
      }
    }

    .parent-link .link-title { width: 100%; }

    .is-parent-menu { @include transform(translateX(-100%)); }

    .is-next-menu {
      position: absolute;
      left: 100%;
      z-index: 1;
      display: block;
      width: 100%;
    }

    .toggle-menu {
      display: none;
    }

    .go-forward,
    .go-backward,
    .back-link {
      position: relative;
      top: 3px;
      display: block;
    }

    .go-forward,
    .go-backward {
      height: 100%;
      padding: 0 20px;
      color: #ccc;
      line-height: 30px;
      @include icon-font(17px);
    }

    .go-forward {
      position: relative;
      left: 20px;
    }

    .go-backward { padding-left: 0; }
  }

  .main-sidebar .cart {

    .top-group {
      @extend %clearfix;
      padding-top: 15px;
    }

    .item-count {
      margin-left: 20px;
      padding-bottom: 15px;
      color: $color-tertiary-grey;
      float: left;
    }

    .item-count:before {
      position: relative;
      top: 1px;
      content: "\e618";
      margin-right: 8px;
      color: $accent-color;
      @include icon-font(20px);
    }

    .cart-value {
      display: block;
      padding: 52px 0;
      font-size: 42px;
      text-align: center;
      font-weight: 400;
      line-height: 0;
      color: $accent-color;
      border-top: 1px solid #eee;
      clear: both;
    }

    .cart-tools {
      display: table;
      width: 100%;
      font-size: 18px;
      border: 1px solid $color-border-grey;
      border-left: none;
      border-right: none;
    }

    .cart-tools a {
      display: table-cell;
      text-align: center;
      text-decoration: none;
      padding: 8px 0;
      color: $color-secondary-grey;

      &:first-child { border-right: 1px solid $color-border-grey; }
    }
  }

  .main-sidebar .live-result {
    display: table !important;
    width: 100% !important;
    margin: 0 !important;
    padding: 20px 0 0 0 !important;
    @include box-sizing(border-box);

    span { width: 78%; }
  }
}

.social-icons {
  padding: 0;

  @include breakpoint(medium) { padding: 0 20px; }

  li {
    display: inline-block;
    margin-right: 15px;
    @include breakpoint(medium) { margin-right: 13px; }
