.main-sidebar .info-box {
  margin: 15px 0;
  font-size: 18px;
  line-height: 28px;
  color: $color-secondary-grey;

  @include breakpoint(medium) {
    margin-left: 15px;
    margin-right: 15px;
  }

  h4 {
    margin: 0 0 10px 0;
    color: $accent-color;
  }

  .info {
    margin: 0;
    font-size: 16px;
    line-height: 24px;
  }
}

.pagination {
  @extend %clearfix;
  margin-top: 35px;
  font-size: 14px;
  text-align: left;

  @include breakpoint(medium) {
    margin-top: 30px;
    text-align: center;
  }

  a,
  span {
    display: inline-block;
    padding: 6px 12px;
    border: 1px solid $color-border-grey;
    text-decoration: none;
    color: $color-secondary-grey;

    &.active { color: $accent-color; }
  }

  span { cursor: default; }

  .numbered-paging {
    @extend %clearfix;
    display: inline-block;
    margin-bottom: -12px;

    a,
    span {
      border-right: none;
      float: left;

      &:first-child {
        border-top-left-radius: 3px;
        border-bottom-left-radius: 3px;
      }

