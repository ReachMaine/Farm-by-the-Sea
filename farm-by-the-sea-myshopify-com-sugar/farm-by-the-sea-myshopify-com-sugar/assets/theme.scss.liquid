.featured-products-list {
  @extend %clearfix;
}

.product-list-item {
  width: 50%;
  margin-top: 0;
  margin-bottom: 25px;
  padding: 0 10px;
  float: left;
  @include box-sizing(border-box);

  &:nth-child(odd) {
    clear: left;
  }

  @include breakpoint(tiny) {
    width: 100%;
    margin-top: 25px;
    padding: 0;
    float: none;
    @include box-sizing(content-box);

    &:first-child { margin-top: 0; }
  }
}

.product-list-item-thumbnail {
  position: relative;
  margin: 0;
  overflow: hidden;
  background-color: mix($color-border-grey, #fff, 50%);

  img {
    display: block;
    margin-left: auto;
    margin-right: auto;
    border-radius: 3px;
    vertical-align: bottom;
  }

  .quick-shop & a:before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: $accent-color;
    @include opacity(0);
    @include transition(opacity 0.1s ease-in);

    @include breakpoint(small) {
      display: none;
    }
  }

  .quick-shop & a:after {
    content: "{{ 'products.product.quick_shop' | t }}";
    position: absolute;
    top: 50%;
    display: block;
    z-index: 4;
    width: 100%;
    margin-top: -12px;
    text-align: center;
    font-size: 20px;
    color: #fff;
    @include opacity(0);
    @include transition(all 0.1s ease-in);
    @include transform(scale(0.9));

    @include breakpoint(small) {
      display: none;
    }
  }

  .quick-shop & a:hover:before { @include opacity(0.6); }

  .quick-shop & a:hover:after {
    @include opacity(1);
    @include transform(scale(1));
  }

  .price,
  .on-sale { font-weight: 500; }

  .price,
  .on-sale,
  .stock-left,
  .sold-out { position: absolute; }

  .price,
  .stock-left,
  .sold-out {
    background: #fff;
    color: $accent-color;
  }

  .on-sale,
  .stock-left,
  .sold-out { left: 0; }

  .on-sale {
    top: 16px;
    left: -30px;
    width: 120px;
    padding: 3px 0;
    color: #fff;
    font-size: 13px;
    text-transform: uppercase;
    text-align: center;
    letter-spacing: 0.12em;
    background: $accent-color;
    @include transform(rotate(-45deg));

    @include breakpoint(small) { font-size: 15px; }

    @include breakpoint(tiny) {
      top: 11px;
      padding: 6px 0;
    }

    .lt-ie9 & {
      top: 22px;
      left: 0;
      width: initial;
      padding: 4px 10px;
      padding-right: 15px;
      border-top-right-radius: 30px;
      border-bottom-right-radius: 30px;
    }
  }

  .price {
    top: 20px;
    right: 0;
    padding: 5px 10px;
    padding-left: 15px;
    font-size: 18px;
    border-top-left-radius: 30px;
    border-bottom-left-radius: 30px;

    @include breakpoint(small) {
      top: 18px;
      font-size: 16px;
    }
  }

  .stock-left,
  .sold-out {
    bottom: 0;
    padding: 3px 10px;
    font-size: 14px;
    font-style: italic;
    font-weight: 600;
    text-transform: uppercase;
    border-top-right-radius: 2px;
  }
}

.product-list-title {
