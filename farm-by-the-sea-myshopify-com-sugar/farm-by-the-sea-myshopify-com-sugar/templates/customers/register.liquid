<h1 class="page-title">{{ 'customers.register.header' | t }}</h1>

{% form 'create_customer' %}

  <div class="input-wrapper">
    <label for="customer[first_name]">{{ 'customers.general.first_name' | t }}</label>
    <input type="text" placeholder="" value="{{ form.first_name }}" name="customer[first_name]" class="{% if form.errors contains "first_name" %}error{% endif %}">

    {% if form.errors contains "first_name" %}
      <p class="error-message">{{ 'customers.general.first_name' | t }} {{ form.errors.messages['first_name'] }}</p>
    {% endif %}
  </div>

  <div class="input-wrapper">
    <label for="customer[last_name]">{{ 'customers.general.last_name' | t }}</label>
    <input type="text" placeholder="" value="{{ form.last_name }}" name="customer[last_name]" class="{% if form.errors contains "last_name" %}error{% endif %}">

    {% if form.errors contains "last_name" %}
      <p class="error-message">{{ 'customers.general.last_name' | t }} {{ form.errors.messages['last_name'] }}</p>
    {% endif %}
  </div>

  <div class="input-wrapper">
    <label for="customer[email]">{{ 'general.pages.email' | t }}</label>
    <input type="text" placeholder="" value="{{ form.email }}" name="customer[email]" class="{% if form.errors contains "email" %}error{% endif %}">

    {% if form.errors contains "email" %}
      <p class="error-message">{{ 'general.pages.email' | t }} {{ form.errors.messages['email'] }}</p>
    {% endif %}
  </div>

  <div class="input-wrapper">
    <label for="customer[password]">{{ 'general.pages.password' | t }}</label>
    <input type="password" placeholder="" value="" name="customer[password]" class="{% if form.errors contains "password" %}error{% endif %}">

    {% if form.errors contains "password" %}
      <p class="error-message">{{ 'general.pages.password' | t }} {{ form.errors.messages['password'] }}</p>
    {% endif %}
  </div>

  <div class="input-wrapper">
    <input type="submit" value="{{ 'customers.register.submit' | t }}">
  </div>

{% endform %}
