<h1 class="page-title">{{ page.title }}</h1>

<div class="rte">
  {{ page.content }}
</div>

<div class="contact-form">
  {% form 'contact' %}

    {% if form.posted_successfully? %}
      <div class="field-wrap success-message"><span>{{ 'general.contact.success' | t }}</span></div>
    {% elsif form.errors %}
      <div class="field-wrap error-message"><span>{{ 'general.contact.error' | t }}</span></div>
    {% endif %}

    <div class="field-wrap name">
      <label>{{ 'general.pages.name' | t }}</label>
      <input type="text" placeholder="{{ 'general.pages.name_placeholder' | t }}" value="" name="contact[name]" class="{% if form.errors contains "author" %}error{% endif %}">
    </div>

    <div class="field-wrap email">
      <label>{{ 'general.pages.email' | t }}</label>
      <input type="text" placeholder="{{ 'general.pages.email_placeholder' | t }}" value="" name="contact[email]" class="{% if form.errors contains "email" %}error{% endif %}">
    </div>

    <div class="field-wrap message">
      <label>{{ 'general.pages.message_label' | t }}</label>
      <textarea name="contact[comments]" class="{% if form.errors contains "body" %}error{% endif %}"></textarea>
    </div>

    <input type="submit" value="{{ 'general.contact.submit' | t }}">

  {% endform %}
</div>
